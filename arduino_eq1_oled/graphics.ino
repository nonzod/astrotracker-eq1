void displayModeAuto() {
  display.clearDisplay();
  display.setCursor(0, 0);
  display.print("Inseguimento");
  display.setCursor(60, 16);
  
  switch (selectedSpeed) {
    case 0:
      display.print("Stelle");
      display.drawBitmap(0, 16, star, 48, 48, WHITE);
      break;
    case 1:
